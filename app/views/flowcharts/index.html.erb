<div class="category">カテゴリ:すべて</div>
<div class="list-container">
  <% @flowcharts.each do |f| %>
    <div class="index-title">
      <%= link_to f.title, flowchart_path(f.id), class: "link" %>
    </div>
    <div class="flowchart-content">
      <div class="image-container">
      <% if f.image.attached? %>
        <%= image_tag(f.image, class: "flowchart-image") %>
      <% else %>
        <%= image_tag("public_offering_line72.png") %>
      <% end %>
      </div>
      <div class="summary-container">
        <p class="goal"><%= f.goal %></p>
        <a class="author link" href="#">by: <%= f.user.name %></a>
      </div>
    </div>
  <% end %>
</div>
<%= link_to new_flowchart_path do %>
  <%= image_tag("fillable_card_line48.png", class: "new-flowchart") %>
  <span class="new-flowchart-text">書く</span>
<% end %>
