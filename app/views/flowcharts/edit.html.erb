<%= form_with model: @flowchart do |form| %>
  <div class="field">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, size: "30*1", class: "form", placeholder: @flowchart.title %>
  </div>
  <div class="field">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image %>
  </div>
  <div class="field">
    <%= form.label :goal, class: "form-label" %>
    <%= form.text_area :goal, class: "form goal", placeholder: @flowchart.goal %>
  </div>
  <div class="field">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box form", id:"item-category"}) %>
  </div>
  <div class="field">
    <%= form.check_box :private %>
    <%= form.label :private, "公開しない" %>
  </div>
  <div class="field">
    <%= form.submit "保存する", class: "btn" %>
  </div>
<% end %>